{
    "compilerOptions": {
        // "target": "ES2015",
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": false,
//        "moduleResolution": "Node",
        "allowJs": true,
        "esModuleInterop": true,
        "downlevelIteration": true,

        "sourceMap": true,
        // TSはECMAScript 5に変換
        "target": "es5",
        // TSのモジュールはES Modulesとして出力
        "module": "es2015",
        // JSXの書式を有効に設定
        "jsx": "react",
        "moduleResolution": "node",
        "lib": [
            "es2020",
            "dom"
        ]
    },
    "extends": "./tsconfig.json",
    "include": [
        "public/ts/*.ts",
        ".eslintrc.js",
        "src/server.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
